<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_social_search_view_parent"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/spacing_single"
    android:paddingEnd="@dimen/spacing_single">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/toolbar_search_input"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/toolbar_search_back"
        android:hint="Search"
        android:background="@drawable/rounded_bg_search"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableEnd="@drawable/ic_group_568"
        android:textColor="#d1d1d6"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_group_571"

        />
</androidx.constraintlayout.widget.ConstraintLayout>