    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
        <include layout="@layout/data_placeholder_layout"/>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>